<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moral.automatimobile">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".activity.RegisterActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".activity.ForgotPasswordActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity android:name=".activity.NewActivity" />
        <activity
            android:name=".activity.UsedActivity"
            android:label="Select Used Car..." />
        <activity
            android:name=".activity.ModelActivity"
            android:label="Select Model..." />
        <activity android:name=".activity.ProfileActivity" />
        <activity
            android:name=".activity.CarDetailActivity"
            android:label="Used Car Detail" />
        <activity android:name=".activity.PaymentActivity"></activity>
    </application>

</manifest>